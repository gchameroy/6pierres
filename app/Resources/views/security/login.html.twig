{% extends 'base_inspinia.html.twig' %}

{% block title 'Connexion' %}

{% block body %}
    <body class="gray-bg">
        <div class="middle-box text-center loginscreen animated fadeInDown">
            <div>
                <h3>{{ 'security.login.welcome'|trans }}</h3>
                <form class="m-t" action="{{ path('login_check') }}" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="{{ 'security.login.username'|trans }}" name="_username" value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" name="_password" />
                    </div>
                    {% if error %}
                        <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                    {% endif %}
                    <button type="submit" class="btn btn-primary block full-width m-b">{{ 'security.login.signin'|trans }}</button>
                </form>
            </div>
        </div>
        {% include 'layout_inspinia/main_js.html.twig' only %}
    </body>
{% endblock %}
