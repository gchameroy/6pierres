{% extends 'base_inspinia.html.twig' %}

{% block title 'Management - Projects' %}

{% block nav %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ 'projects.title.description'|trans }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('app') }}">{{ 'app.title.label'|trans }}</a>
                </li>
                <li class="active">
                    <strong>{{ 'projects.title.label'|trans }}</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
            <div class="title-action">
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="wrapper wrapper-content  animated fadeInRight">
		<div class="row">
            <div class="col-lg-7">
                <div class="ibox">
					<div class="ibox-title">
						<h5>{{ 'projects.title.description'|trans }}</h5>
						<div class="ibox-tools">
							<a class="btn btn-primary btn-xs action_project_add">{{ 'project.action.add.label'|trans }}</a>
						</div>
					</div>
                    <div class="ibox-content">
						<div class="project-list">
							<table class="table table-hover">
								<tbody>
									{% for project in projects %}
										<tr>
											<td>
												<span class="label label-primary">{{ 'project.status.active.label'|trans }}</span>
											</td>
											<td>[First Photo]</td>
											<td>
												<a href="#">{{ project.name }}</a>
												<br><small>project.completedAt.label </small>
											</td>
											<td>[Nb] project.photos.number</td>
											<td class="text-right">
												<div class="btn-group">
													<a href="" class="btn btn-white btn-sm">
														<i class="fa fa-folder"></i>
														{{ 'project.action.view.label'|trans }}
													</a>
												</div>
											</td>
										</tr>
									{% endfor %}
								</tbody>
								<tfoot>
									<tr>
										<td colspan="7">
											<ul class="pagination pull-right"></ul>
										</td>
									</tr>
								</tfoot>
							</table>
						</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
